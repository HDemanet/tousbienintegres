<% set_meta_tags title: 'Actualit√©s',
                  description: 'Suivez l\'actualit√© de notre campagne et les publications de l\'√©quipe.' %>

<section class="hero-photo" style="padding: 0rem;">
  <div class="hero-photo__image">
    <%= image_tag "home/breton.jpg",
                  alt: "",
                  class: "w-100",
                  style: "height:100%; object-fit:cover; object-position:50% 70%;" %>
  </div>
  <div class="hero-photo__content">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <h1>Nos actualit√©s</h1>
          <p class="lead">
            Suivez notre campagne
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5" data-controller="articles-filter">
  <div class="container">

    <!-- ‚úÖ FILTRES SIMPLIFI√âS -->
    <div class="articles-filters mb-5">
      <div class="d-flex justify-content-center flex-wrap gap-2">
        <button class="btn btn-outline-primary active"
                data-articles-filter-target="filterBtn"
                data-action="click->articles-filter#filterAll">
          Tous
        </button>
        <button class="btn btn-outline-primary"
                data-articles-filter-target="filterBtn"
                data-action="click->articles-filter#filter"
                data-country="general">
          G√©n√©ral üåç
        </button>
        <button class="btn btn-outline-primary"
                data-articles-filter-target="filterBtn"
                data-action="click->articles-filter#filter"
                data-country="belgique">
          Belgique üáßüá™
        </button>
        <button class="btn btn-outline-primary"
                data-articles-filter-target="filterBtn"
                data-action="click->articles-filter#filter"
                data-country="pays_bas">
          Pays-Bas üá≥üá±
        </button>
        <button class="btn btn-outline-primary"
                data-articles-filter-target="filterBtn"
                data-action="click->articles-filter#filter"
                data-country="luxembourg">
          Luxembourg üá±üá∫
        </button>
      </div>
    </div>

    <!-- Liste des articles -->
    <% if @articles.any? %>
      <div class="row g-4" data-articles-filter-target="grid">
        <% @articles.each do |article| %>
          <div class="col-md-6 col-lg-4 article-card"
               data-articles-filter-target="card"
               data-country="<%= article.country %>">
            <%= link_to article_path(article), class: "text-decoration-none" do %>
              <article class="card h-100 border-0 shadow-sm">
                <% if article.image.attached? %>
                  <%= image_tag article.image,
                                alt: article.title,
                                class: "card-img-top",
                                style: "height: 200px; object-fit: cover;" %>
                <% end %>
                <div class="card-body">
                  <% if article.published_at %>
                    <p class="text-muted small mb-2">
                      <i class="far fa-calendar me-1" aria-hidden="true"></i>
                      <%= l(article.published_at, format: :long) %>
                      <% if article.country.present? %>
                        <span class="ms-2"><%= article.country_flag %></span>
                      <% end %>
                    </p>
                  <% end %>

                  <h2 class="h5 card-title text-dark">
                    <%= article.title %>
                  </h2>

                  <% if article.excerpt.present? %>
                    <p class="card-text text-muted">
                      <%= truncate(article.excerpt, length: 150) %>
                    </p>
                  <% end %>

                  <span class="text-primary small">
                    Lire la suite <i class="fas fa-arrow-right ms-1" aria-hidden="true"></i>
                  </span>
                </div>
              </article>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Message si pas de r√©sultats -->
      <div class="text-center mt-5 d-none" data-articles-filter-target="noResults">
        <p class="text-muted">Aucun article pour ce pays.</p>
      </div>

      <!-- Pagination -->
      <% if @articles.total_pages > 1 %>
        <nav class="mt-5" aria-label="Navigation articles">
          <%= paginate @articles %>
        </nav>
      <% end %>

    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-newspaper fa-3x text-muted mb-3" aria-hidden="true"></i>
        <p class="lead text-muted">
          Aucun article pour le moment.
        </p>
        <p class="text-muted">
          Revenez prochainement pour suivre notre actualit√© !
        </p>
      </div>
    <% end %>

  </div>
</section>
