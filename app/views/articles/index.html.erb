<!-- app/views/articles/index.html.erb -->
<% set_meta_tags title: 'Actualités',
                  description: 'Suivez l\'actualité de notre campagne et les publications de l\'équipe.' %>

<section class="hero-photo" style="padding: 0rem;">
  <div class="hero-photo__image" >
    <%= image_tag "home/breton.jpg",
      alt: "",
      class: "w-100",
      style: "height:100%; object-fit:cover; object-position:50% 70%;" %>
  </div>
  <div class="hero-photo__content">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <h1>Nos actualités</h1>
          <p class="lead">
            Suivez notre campagne
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container">

    <!-- Articles à la une (si présents) -->
    <% if @featured_articles.any? %>
      <div class="mb-5">
        <h2 class="h4 mb-4">À la une</h2>
        <div class="row g-4">
          <% @featured_articles.each do |article| %>
            <div class="col-md-4">
              <%= link_to article_path(article), class: "text-decoration-none" do %>
                <article class="card h-100 border-0 shadow-sm featured-article">
                  <% if article.image.attached? %>
                    <%= image_tag article.image,
                                  alt: article.title,
                                  class: "card-img-top",
                                  style: "height: 200px; object-fit: cover;" %>
                  <% end %>
                  <div class="card-body">
                    <h3 class="h5 card-title text-dark"><%= article.title %></h3>
                    <% if article.excerpt.present? %>
                      <p class="card-text text-muted small">
                        <%= truncate(article.excerpt, length: 100) %>
                      </p>
                    <% end %>
                    <% if article.published_at %>
                      <p class="text-muted small mb-0">
                        <i class="far fa-calendar me-1" aria-hidden="true"></i>
                        <%= l(article.published_at, format: :long) %>
                      </p>
                    <% end %>
                  </div>
                </article>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- ❌ FILTRES CATÉGORIES SUPPRIMÉS -->

    <!-- Liste des articles -->
    <% if @articles.any? %>
      <div class="row g-4">
        <% @articles.each do |article| %>
          <div class="col-md-6 col-lg-4">
            <%= link_to article_path(article), class: "text-decoration-none" do %>
              <article class="card h-100 border-0 shadow-sm article-card">
                <% if article.image.attached? %>
                  <%= image_tag article.image,
                                alt: article.title,
                                class: "card-img-top",
                                style: "height: 200px; object-fit: cover;" %>
                <% end %>
                <div class="card-body">
                  <% if article.published_at %>
                    <p class="text-muted small mb-2">
                      <i class="far fa-calendar me-1" aria-hidden="true"></i>
                      <%= l(article.published_at, format: :long) %>
                    </p>
                  <% end %>

                  <h2 class="h5 card-title text-dark">
                    <%= article.title %>
                  </h2>

                  <% if article.excerpt.present? %>
                    <p class="card-text text-muted">
                      <%= truncate(article.excerpt, length: 150) %>
                    </p>
                  <% end %>

                  <span class="text-primary small">
                    Lire la suite <i class="fas fa-arrow-right ms-1" aria-hidden="true"></i>
                  </span>
                </div>
              </article>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @articles.total_pages > 1 %>
        <nav class="mt-5" aria-label="Navigation articles">
          <%= paginate @articles %>
        </nav>
      <% end %>

    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-newspaper fa-3x text-muted mb-3" aria-hidden="true"></i>
        <p class="lead text-muted">
          Aucun article pour le moment.
        </p>
        <p class="text-muted">
          Revenez prochainement pour suivre notre actualité !
        </p>
      </div>
    <% end %>

  </div>
</section>

<!-- CSS pour les effets hover -->
<style>
.article-card,
.featured-article {
  transition: all 0.3s cubic-bezier(0.57, 0.21, 0.69, 1);
}

.article-card:hover,
.featured-article:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
}

.article-card .card-title,
.featured-article .card-title {
  transition: color 0.3s ease;
}

.article-card:hover .card-title,
.featured-article:hover .card-title {
  color: #EF5327 !important;
}
</style>
