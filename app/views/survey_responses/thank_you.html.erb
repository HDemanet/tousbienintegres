<!-- app/views/surveys/thank_you.html.erb -->
<% set_meta_tags title: 'Merci pour votre participation' %>

<div class="container py-5">
  <div class="row">
    <div class="col-lg-6 mx-auto text-center">
      <div class="mb-4">
        <i class="fas fa-check-circle fa-5x" style="color: #018837;" aria-hidden="true"></i>
      </div>

      <h1 class="mb-3">Merci pour votre participation !</h1>

      <p class="lead mb-4">
        Vos réponses ont bien été enregistrées et nous aideront à mieux vous représenter.
      </p>

      <div class="alert alert-info" role="status">
        <p class="mb-0">
          <i class="fas fa-envelope me-2" aria-hidden="true"></i>
          Vous recevrez un email de confirmation à l'adresse indiquée.
        </p>
      </div>

      <div class="mt-5">
        <%= link_to root_path, class: 'btn btn-primary btn-lg me-2', style: 'background-color: #EF5327; border-color: #EF5327;' do %>
          <i class="fas fa-home me-2" aria-hidden="true"></i>
          Retour à l'accueil
        <% end %>

        <%= link_to about_path, class: 'btn btn-outline-primary btn-lg' do %>
          En savoir plus sur nous
        <% end %>
      </div>
    </div>
  </div>
</div>
