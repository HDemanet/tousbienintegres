<!-- app/views/contacts/thank_you.html.erb -->
<% set_meta_tags title: 'Message envoyé' %>

<section class="py-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto text-center">

        <div class="mb-4">
          <i class="fas fa-check-circle fa-5x text-success" aria-hidden="true"></i>
        </div>

        <h1 class="h2 mb-4">Message envoyé avec succès !</h1>

        <p class="lead mb-4">
          Merci pour votre message. Nous vous répondrons dans les meilleurs délais.
        </p>

        <div class="mt-5">
          <%= link_to root_path, class: "btn btn-primary btn-lg me-2" do %>
            <i class="fas fa-home me-2" aria-hidden="true"></i>
            Retour à l'accueil
          <% end %>
          <%= link_to new_contact_path, class: "btn btn-outline-secondary btn-lg" do %>
            <i class="fas fa-envelope me-2" aria-hidden="true"></i>
            Envoyer un autre message
          <% end %>
        </div>

      </div>
    </div>
  </div>
</section>
