<!-- app/views/contacts/new.html.erb -->
<% set_meta_tags title: 'Contact',
                  description: 'Contactez l\'équipe Tous bien intégrés - Liste MoDem pour les élections consulaires 2026.' %>

<section class="page-header-simple">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto text-center">
        <h1>Contactez-nous</h1>
        <p class="lead mb-0">
          Nous sommes à votre écoute
        </p>
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">

        <p class="lead mb-5">
          Une question ? Une suggestion ? N'hésitez pas à nous contacter,
          nous vous répondrons dans les meilleurs délais.
        </p>

        <%= form_with model: @contact, url: contacts_path, local: true, html: { class: "needs-validation", novalidate: true } do |f| %>

          <div class="mb-3">
            <%= f.label :name, "Nom complet *", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", required: true,
                             'aria-required': 'true',
                             'aria-describedby': 'name-help',
                             placeholder: "Prénom Nom" %>
            <div id="name-help" class="form-text">Votre nom et prénom</div>
          </div>

          <div class="mb-3">
            <%= f.label :email, "Email *", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", required: true,
                              'aria-required': 'true',
                              'aria-describedby': 'email-help',
                              placeholder: "votre.email@exemple.com" %>
            <div id="email-help" class="form-text">Nous vous répondrons à cette adresse</div>
          </div>

          <div class="mb-3">
            <%= f.label :subject, "Sujet *", class: "form-label" %>
            <%= f.text_field :subject, class: "form-control", required: true,
                             'aria-required': 'true',
                             placeholder: "Objet de votre message" %>
          </div>

          <div class="mb-4">
            <%= f.label :message, "Message *", class: "form-label" %>
            <%= f.text_area :message, rows: 8, class: "form-control", required: true,
                            'aria-required': 'true',
                            'aria-describedby': 'message-help',
                            placeholder: "Votre message..." %>
            <div id="message-help" class="form-text">Soyez aussi précis que possible</div>
          </div>

          <!-- Consentement RGPD -->
          <div class="mb-4">
            <div class="form-check">
              <%= f.check_box :consent, class: "form-check-input", required: true,
                              'aria-required': 'true', id: "contact_consent" %>
              <%= f.label :consent, class: "form-check-label", for: "contact_consent" do %>
                J'accepte que mes données soient utilisées pour traiter ma demande conformément
                à la <%= link_to "politique de confidentialité", privacy_path, target: "_blank" %>. *
              <% end %>
            </div>
          </div>

          <!-- Submit -->
          <div class="d-flex gap-3 flex-wrap">
            <%= f.submit "Envoyer", class: "btn btn-primary btn-lg" %>
            <%= link_to "Retour", root_path, class: "btn btn-outline-primary btn-lg" %>
          </div>

          <p class="mt-4 text-muted small">
            * Champs obligatoires
          </p>

        <% end %>

      </div>
    </div>
  </div>
</section>
